<style>

header {
	height: 70px;
}

.header-title {
	letter-spacing: 0.07em;
	line-height: 70px;
}

footer {
	height: 60px;
	position: fixed;
    bottom: 0;
    width: 100%;
    line-height: 60px;
    font-size: 20px;
}

.footer-title {
	letter-spacing: 0.07em;
	margin-left: 20px;
}

.edit-container {
	width: 500px;
	margin: 0 auto;
}

.body-area {
	height: 230px;
}

.btn-container {
	margin-bottom: 80px;
}


</style>

<header class="bg-info mw-100">
	<h1 class="header-title text-center text-white">Bookers</h1>
</header>

<body>
	<div class="edit-container">
		<h1 class="text-center my-5 text-secondary">Editng Book</h1>
		<div class="form-group text-center">
			<%= form_for(@book) do |f| %>

			<label for="form-title">Title</label>
			<%= f.text_field :title, class: "form-control mb-2", id: "form-title", placeholder: "本のタイトル" %>

			<label for="form-body">Body</label>
			<%= f.text_area :body, class: "form-control body-area", id: "form-body", placeholder: "ここに本文を入れてください" %>

			<%= f.submit 'Book Update', class: "mt-3 btn btn-primary" %>

			<% end %>
		</div>
	</div>

	<div class="btn-container text-center">
		<%= link_to "Show", book_path(@book), class: "d-inline-block font-weight-bold mt-5 py-2 px-3 mx-auto btn-outline-info rounded" %>
		<%= link_to "Back", books_path, class: "d-inline-block font-weight-bold mt-5 py-2 px-3 mx-auto btn-outline-secondary rounded" %>
	</div>

</body>

<footer class="bg-info">
		<p class="footer-title text-left text-white font-weight-bold">Bookers</p>
		<p></p>
		<p></p>
</footer>