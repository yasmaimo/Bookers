<style>

header {
	height: 70px;
}

.header-title {
	letter-spacing: 0.07em;
	line-height: 70px;
}

.flash-container {
	height: 100px;
}

.flash-container h5 {
	line-height: 100px;
}

.lef-container {

}

.body-area {
	height: 230px;
}

.right-container {
	margin-bottom: 80px;
}

.book-table {
	width: 100%;
	table-layout: fixed;
}

.columm-1 {
	width: 27%;
	overflow: hidden;
}

.columm-2 {
	width: 48%;
	overflow: hidden;
}

.columm-3 {
	width: 25%;
	overflow: hidden;
}

footer {
	height: 60px;
	position: fixed;
    bottom: 0;
    width: 100%;
    line-height: 60px;
    font-size: 20px;
}

.footer-title {
	letter-spacing: 0.07em;
	margin-left: 20px;
}


}

</style>

<header class="bg-info mw-100">
	<h1 class="header-title text-center text-white">Bookers</h1>
</header>

<body>
	<div class="flash-container">
		<h5 class="text-center text-danger font-weight-bold"><%= flash[:destroyed] %></h5>
	</div>

	<div class="container mw-100">
		<div class="row">
			<h2 class="col-3 text-center text-secondary">New Book</h2>
			<h2 class="col-9 text-center text-secondary">Books</h2>
		</div>

		<div class="row">
			<div class="pl-4 col-3">
				<div class="form-group text-center">
					<%= form_for(@post) do |f| %>

					<label for="form-title">Title</label>
					<%= f.text_field :title, class: "form-control mb-2", id: "form-title", placeholder: "本のタイトル" %>

					<label for="form-body">Body</label>
					<%= f.text_area :body, class: "form-control body-area", id: "form-body", placeholder: "ここに本文を入れてください" %>

					<%= f.submit 'Create Book', class: "mt-3 btn btn-success" %>

					<% end %>
				</div>
			</div>

			<div class="right-container pr-4 col-9">
				<table class="table table-hover book-table">
					<thead>
						<tr class="bg-info text-white">
							<th class="columm-1">title</th>
							<th class="columm-2">body</th>
							<th class="columm-3"></th>
						</tr>
					</thead>

					<% @books.each do |book| %>
					<tbody>
						<tr>
							<td class="text-truncate columm-1"><%= book.title %></td>
							<td class="text-truncate columm-2"><%= book.body %></td>
							<td class="columm-3"><%= link_to "Show", book_path(book), class: "btn btn-outline-info btn-sm" %>
								<%= link_to "Edit", edit_book_path(book), class: "btn btn-outline-primary btn-sm" %>
								<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-outline-danger btn-sm" %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</body>

<footer class="bg-info">
		<p class="footer-title text-left text-white font-weight-bold">Bookers</p>
		<p></p>
		<p></p>
</footer>