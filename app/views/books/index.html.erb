<div style="height: 60px;">
	<p class="flash-message text-danger"><%= flash[:failed] %><%= flash[:destroyed] %></p>
</div>

<div class="container mw-100">
	<div class="row">
		<p class="h2 col-3 text-center text-secondary">New Book</p>
		<p class="h2 col-9 text-center text-secondary">Books</p>
	</div>

	<div class="row">
		<div class="mb-4 pl-4 col-3">
			<div class="form-group text-center">
				<%= form_for(@post) do |f| %>

				<label for="form-title">Title</label>
				<%= f.text_field :title, class: "form-control mb-2", id: "form-title", placeholder: "本のタイトル" %>

				<label for="form-body">Body</label>
				<%= f.text_area :body, class: "form-control", id: "form-body", placeholder: "ここに本文を入れてください", rows:"10" %>

				<%= f.submit 'Create Book', class: "mt-3 btn btn-success" %>

				<% end %>
			</div>
		</div>

		<div class="mb-4 pr-4 col-9">
			<table class="table table-hover book-table">
				<thead>
					<tr class="bg-info text-white">
						<th class="columm-1">title</th>
						<th class="columm-2">body</th>
						<th class="columm-3"></th>
					</tr>
				</thead>

				<% @books.each do |book| %>
				<tbody>
					<tr class="small">
						<td class="text-truncate columm-1"><%= book.title %></td>
						<td class="text-truncate columm-2"><%= book.body %></td>
						<td class="columm-3">
							<%= link_to "Show", book_path(book), class: "btn btn-outline-info btn-sm" %>
							<%= link_to "Edit", edit_book_path(book), class: "btn btn-outline-primary btn-sm" %>
							<%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-outline-danger btn-sm" %>
						</td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>