<%= flash[:destroyed] %>

<h1>Books</h1>

<table>
	<tr>
		<th>title</th><th>body</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
		</tr>
	<% end %>
</table>

<h2>New Book</h2>
	<%= form_for(@post) do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %>

		<%= f.submit 'Create Book' %>
	<% end %>